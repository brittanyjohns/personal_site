<div class="mx-auto w-7/8 bg-white p-3 md:p-10 h-screen">
  <h1 class="text-4xl font-serif m-3">Welcome to my blog!</h1>
    <div id="posts" class="min-w-full">
    <% if @posts.empty? %>
      <p class="text-2xl font-bold">
        Under Construction - Check back soon!
      </p>
    <% else %>
      <%= render @posts %>
    <% end %>
  </div>
    <%= link_to "Back", root_path, class: "block p-3 border text-center" %>

</div>
